
@{
    ViewBag.Title = "FindEvent";
}

<h2>FindEvent</h2>

<div class="panel panel-default">
    <div class="panel-heading">Find an Event</div>
    <div class="panel-body">
        @using (Ajax.BeginForm("EventSearch", "Home", new AjaxOptions
        {
            InsertionMode = InsertionMode.Replace,
            HttpMethod = "GET",
            OnFailure = "searchFailed",
            LoadingElementId = "ajax-loader",
            UpdateTargetId = "searchresults"
        }))
        {
            <input type="text" name="z" placeholder="Event Type" />
            <input type="text" name="q" placeholder="Location" />
            <input type="submit" value="search" />
            <img id="ajax-loader"
                 src="@Url.Content("~/Content/ajax-loader.gif")"
                 style="display:none" / >
        }
        <div id="searchresults"></div>
    </div>
</div>

@section Scripts{

    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/UserScripts/UserScripts.js"></script>
}

