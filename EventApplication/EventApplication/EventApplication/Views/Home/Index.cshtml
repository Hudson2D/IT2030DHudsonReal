
@model IEnumerable<EventApplication.Models.Event>

@{
    ViewBag.Title = "Home Page";
}



<link href="~/Content/Site.css" rel="stylesheet" />
<div class="jumbotron">
    <div class="container">
        <h1>Event Unlimited</h1>
        <p class="lead">Find events near you. Never Miss Again!</p>
        
    </div>
</div>


<div class="panel panel-default">
    <div class="panel-heading">Find an Event</div>
    <div class="panel-body">
        @using (Ajax.BeginForm("EventSearch", "Home", new AjaxOptions
        {
            InsertionMode = InsertionMode.Replace,
            HttpMethod = "GET",
            OnFailure = "searchFailed",
            LoadingElementId = "ajax-loader",
            UpdateTargetId = "searchresults"
        }))
        {
            <input type="text" name="z" placeholder="Event Type" />
            <input type="text" name="q" placeholder="City, State" />
            <input type="submit" value="search" />
            <img id="ajax-loader"
                 src="@Url.Content("~/Content/ajax-loader.gif")"
                 style="display:none" / >
        }
        <div id="searchresults"></div>
    </div>
</div>

<div id="LastMinuteDeals">
    @Ajax.ActionLink("Click here to see Last Minute Deals", "LastMinuteDeals",
   null,
   new AjaxOptions
   {
       UpdateTargetId= "LastMinuteDeals",
       InsertionMode = InsertionMode.Replace,
       HttpMethod = "GET"

   },
   new { @class = "btn btn-primary" })
</div>

<div>

</div>

@section Scripts{

    <script src="~/Scripts/UserScripts/UserScripts.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
}
